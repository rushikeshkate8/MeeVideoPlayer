<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Player" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/exo_bottom_bar_background</item>
        <item name="android:navigationBarColor">@color/exo_bottom_bar_background</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="27">shortEdges</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="ExoStyledControls.Button.Center.Secondary" parent="ExoStyledControls.Button.Center">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Theme.Main" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/grey_50</item>
        <item name="android:statusBarColor">@color/grey_300</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/grey_100</item>
    </style>
</resources>