<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Player" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/exo_bottom_bar_background</item>
        <item name="android:navigationBarColor">@color/exo_bottom_bar_background</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="27">shortEdges</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="ExoStyledControls.Button.Center.Secondary" parent="ExoStyledControls.Button.Center">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Theme.Main" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/color_background</item>
        <item name="android:statusBarColor">@color/color_surface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorSurface">@color/white</item>
        <item name="alertDialogStyle">@style/AlertDialogStyle</item>
        <item name="android:navigationBarColor">@color/color_background</item>
        <item name="android:colorEdgeEffect">@color/slate_gray</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/color_surface</item>
    </style>


    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:dialogCornerRadius" tools:targetApi="p">12dp</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/color_primary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <!-- Used for the background -->
        <item name="android:background">@color/color_surface</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:colorEdgeEffect">@color/color_primary</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_layout_bg</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <item name="android:actionMenuTextColor">@color/text_color_primary</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/color_primary</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/primary_icon_color</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/color_primary</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/color_primary_light</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->

        <!--        <item name="selectableItemBackground">@drawable/ripple</item>-->
        <!--        <item name="selectableItemBackgroundBorderless">@drawable/ripple</item>-->

    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="Toolbar.TitleText.Secondary" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="MyAppbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">@color/ripple_default_color</item>
    </style>
</resources>