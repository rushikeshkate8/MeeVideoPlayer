<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="videoItem"
            type="com.jiajunhui.xapp.medialoader.bean.VideoItem" />
    </data>

    <RelativeLayout
        android:id="@+id/video_item_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/video_item_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true">
            <!--            app:cardUseCompatPadding="true"-->

            <ImageView
                android:id="@+id/video_thumbnail_image_view"
                android:layout_width="96dp"
                android:layout_height="56dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:imagePath="@{videoItem.path}"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/video_duration_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/video_item_duration_rounded_background"
                android:paddingHorizontal="4dp"
                app:videoDuration="@{videoItem.duration}"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/video_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:textColor="@color/text_color_primary"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:layout_toEndOf="@id/video_item_card_view"
            android:layout_toStartOf="@id/more_menu_item_image_view"
            app:videoDisplayName="@{videoItem.displayName}"
            android:textSize="16sp"
            tools:text="Title dddddddddddddddddddddd lllllllllllllllllllll eeeeeeeeeeeeeeeeeeeeee llllllllllllll dddddddddddddd"/>

        <ImageView
            android:id="@+id/more_menu_item_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginVertical="8dp"
            android:scaleType="centerInside"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_baseline_more_vert_24"
            app:tint="@color/more_icon_color" />

    </RelativeLayout>
</layout>